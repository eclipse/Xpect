<?eclipse version="3.0"?>

<plugin>

    <extension
            point="org.eclipse.ui.editors">
        <editor
            class="org.eclipse.xpect.ui.XpectExecutableExtensionFactory:org.eclipse.xtext.ui.editor.XtextEditor"
            contributorClass="org.eclipse.ui.editors.text.TextEditorActionContributor"
            default="true"
            extensions="xpect"
            id="org.eclipse.xpect.Xpect"
            name="Xpect Editor">
        </editor>
    </extension>
    <extension
        point="org.eclipse.ui.handlers">
        <handler
            class="org.eclipse.xpect.ui.XpectExecutableExtensionFactory:org.eclipse.xtext.ui.editor.hyperlinking.OpenDeclarationHandler"
            commandId="org.eclipse.xtext.ui.editor.hyperlinking.OpenDeclaration">
            <activeWhen>
                <reference
                    definitionId="org.eclipse.xpect.Xpect.Editor.opened">
                </reference>
            </activeWhen>
        </handler>
        <handler
            class="org.eclipse.xpect.ui.XpectExecutableExtensionFactory:org.eclipse.xtext.ui.editor.handler.ValidateActionHandler"
            commandId="org.eclipse.xpect.Xpect.validate">
         <activeWhen>
            <reference
                    definitionId="org.eclipse.xpect.Xpect.Editor.opened">
            </reference>
         </activeWhen>
      	</handler>
      	<!-- copy qualified name -->
        <handler
            class="org.eclipse.xpect.ui.XpectExecutableExtensionFactory:org.eclipse.xtext.ui.editor.copyqualifiedname.EditorCopyQualifiedNameHandler"
            commandId="org.eclipse.xtext.ui.editor.copyqualifiedname.EditorCopyQualifiedName">
            <activeWhen>
				<reference definitionId="org.eclipse.xpect.Xpect.Editor.opened" />
            </activeWhen>
        </handler>
        <handler
            class="org.eclipse.xpect.ui.XpectExecutableExtensionFactory:org.eclipse.xtext.ui.editor.copyqualifiedname.OutlineCopyQualifiedNameHandler"
            commandId="org.eclipse.xtext.ui.editor.copyqualifiedname.OutlineCopyQualifiedName">
            <activeWhen>
            	<and>
            		<reference definitionId="org.eclipse.xpect.Xpect.XtextEditor.opened" />
	                <iterate>
						<adapt type="org.eclipse.xtext.ui.editor.outline.IOutlineNode" />
					</iterate>
				</and>
            </activeWhen>
        </handler>
    </extension>
    <extension point="org.eclipse.core.expressions.definitions">
        <definition id="org.eclipse.xpect.Xpect.Editor.opened">
            <and>
                <reference definitionId="isActiveEditorAnInstanceOfXtextEditor"/>
                <with variable="activeEditor">
                    <test property="org.eclipse.xtext.ui.editor.XtextEditor.languageName" 
                        value="org.eclipse.xpect.Xpect" 
                        forcePluginActivation="true"/>
                </with>        
            </and>
        </definition>
        <definition id="org.eclipse.xpect.Xpect.XtextEditor.opened">
            <and>
                <reference definitionId="isXtextEditorActive"/>
                <with variable="activeEditor">
                    <test property="org.eclipse.xtext.ui.editor.XtextEditor.languageName" 
                        value="org.eclipse.xpect.Xpect" 
                        forcePluginActivation="true"/>
                </with>        
            </and>
        </definition>
    </extension>
    <extension
            point="org.eclipse.ui.preferencePages">
        <page
            class="org.eclipse.xpect.ui.XpectExecutableExtensionFactory:org.eclipse.xtext.ui.editor.preferences.LanguageRootPreferencePage"
            id="org.eclipse.xpect.Xpect"
            name="Xpect">
            <keywordReference id="org.eclipse.xpect.ui.keyword_Xpect"/>
        </page>
        <page
            category="org.eclipse.xpect.Xpect"
            class="org.eclipse.xpect.ui.XpectExecutableExtensionFactory:org.eclipse.xtext.ui.editor.syntaxcoloring.SyntaxColoringPreferencePage"
            id="org.eclipse.xpect.Xpect.coloring"
            name="Syntax Coloring">
            <keywordReference id="org.eclipse.xpect.ui.keyword_Xpect"/>
        </page>
        <page
            category="org.eclipse.xpect.Xpect"
            class="org.eclipse.xpect.ui.XpectExecutableExtensionFactory:org.eclipse.xtext.ui.editor.templates.XtextTemplatePreferencePage"
            id="org.eclipse.xpect.Xpect.templates"
            name="Templates">
            <keywordReference id="org.eclipse.xpect.ui.keyword_Xpect"/>
        </page>
    </extension>
    <extension
            point="org.eclipse.ui.propertyPages">
        <page
            class="org.eclipse.xpect.ui.XpectExecutableExtensionFactory:org.eclipse.xtext.ui.editor.preferences.LanguageRootPreferencePage"
            id="org.eclipse.xpect.Xpect"
            name="Xpect">
            <keywordReference id="org.eclipse.xpect.ui.keyword_Xpect"/>
            <enabledWhen>
	            <adapt type="org.eclipse.core.resources.IProject"/>
			</enabledWhen>
	        <filter name="projectNature" value="org.eclipse.xtext.ui.shared.xtextNature"/>
        </page>
    </extension>
    <extension
        point="org.eclipse.ui.keywords">
        <keyword
            id="org.eclipse.xpect.ui.keyword_Xpect"
            label="Xpect"/>
    </extension>
    <extension
         point="org.eclipse.ui.commands">
      <command
            description="Trigger expensive validation"
            id="org.eclipse.xpect.Xpect.validate"
            name="Validate">
      </command>
      <!-- copy qualified name -->
      <command
            id="org.eclipse.xtext.ui.editor.copyqualifiedname.EditorCopyQualifiedName"
            categoryId="org.eclipse.ui.category.edit"
            description="Copy the qualified name for the selected element"
            name="Copy Qualified Name">
      </command>
      <command
            id="org.eclipse.xtext.ui.editor.copyqualifiedname.OutlineCopyQualifiedName"
            categoryId="org.eclipse.ui.category.edit"
            description="Copy the qualified name for the selected element"
            name="Copy Qualified Name">
      </command>
    </extension>
    <extension point="org.eclipse.ui.menus">
        <menuContribution
            locationURI="popup:#TextEditorContext?after=group.edit">
             <command
                 commandId="org.eclipse.xpect.Xpect.validate"
                 style="push"
                 tooltip="Trigger expensive validation">
            <visibleWhen checkEnabled="false">
                <reference
                    definitionId="org.eclipse.xpect.Xpect.Editor.opened">
                </reference>
            </visibleWhen>
         </command>  
         </menuContribution>
         <!-- copy qualified name -->
         <menuContribution locationURI="popup:#TextEditorContext?after=copy">
         	<command commandId="org.eclipse.xtext.ui.editor.copyqualifiedname.EditorCopyQualifiedName" 
         		style="push" tooltip="Copy Qualified Name">
            	<visibleWhen checkEnabled="false">
                	<reference definitionId="org.eclipse.xpect.Xpect.Editor.opened" />
            	</visibleWhen>
         	</command>  
         </menuContribution>
         <menuContribution locationURI="menu:edit?after=copy">
         	<command commandId="org.eclipse.xtext.ui.editor.copyqualifiedname.EditorCopyQualifiedName"
            	style="push" tooltip="Copy Qualified Name">
            	<visibleWhen checkEnabled="false">
                	<reference definitionId="org.eclipse.xpect.Xpect.Editor.opened" />
            	</visibleWhen>
         	</command>  
         </menuContribution>
         <menuContribution locationURI="popup:org.eclipse.xtext.ui.outline?after=additions">
			<command commandId="org.eclipse.xtext.ui.editor.copyqualifiedname.OutlineCopyQualifiedName" 
				style="push" tooltip="Copy Qualified Name">
         		<visibleWhen checkEnabled="false">
	            	<and>
	            		<reference definitionId="org.eclipse.xpect.Xpect.XtextEditor.opened" />
						<iterate>
							<adapt type="org.eclipse.xtext.ui.editor.outline.IOutlineNode" />
						</iterate>
					</and>
				</visibleWhen>
			</command>
         </menuContribution>
    </extension>
    <extension point="org.eclipse.ui.menus">
		<menuContribution locationURI="popup:#TextEditorContext?endof=group.find">
			<command commandId="org.eclipse.xtext.ui.editor.FindReferences">
				<visibleWhen checkEnabled="false">
                	<reference definitionId="org.eclipse.xpect.Xpect.Editor.opened">
                	</reference>
            	</visibleWhen>
			</command>
		</menuContribution>
	</extension>
	<extension point="org.eclipse.ui.handlers">
	    <handler
            class="org.eclipse.xpect.ui.XpectExecutableExtensionFactory:org.eclipse.xtext.ui.editor.findrefs.FindReferencesHandler"
            commandId="org.eclipse.xtext.ui.editor.FindReferences">
            <activeWhen>
                <reference
                    definitionId="org.eclipse.xpect.Xpect.Editor.opened">
                </reference>
            </activeWhen>
        </handler>
    </extension>   

<!-- adding resource factories -->

	<extension
		point="org.eclipse.emf.ecore.extension_parser">
		<parser
			class="org.eclipse.xpect.ui.XpectExecutableExtensionFactory:org.eclipse.xtext.resource.IResourceFactory"
			type="xpect">
		</parser>
	</extension>
	<extension point="org.eclipse.xtext.extension_resourceServiceProvider">
        <resourceServiceProvider
            class="org.eclipse.xpect.ui.XpectExecutableExtensionFactory:org.eclipse.xtext.ui.resource.IResourceUIServiceProvider"
            uriExtension="xpect">
        </resourceServiceProvider>
    </extension>
    
    <extension point="org.eclipse.emf.ecore.content_parser">
	    <parser class="org.eclipse.xpect.ui.services.XtResourceFactory" contentTypeIdentifier="text/x-xpect-xt">
	    </parser>
	 </extension>   
	<extension point="org.eclipse.xtext.content_resourceServiceProvider">
        <resourceServiceProvider class="org.eclipse.xpect.ui.services.XtResourceUIServiceProviderProvider" contentTypeIdentifier="text/x-xpect-xt">
        </resourceServiceProvider>
    </extension>
    


    <!-- marker definitions for org.eclipse.xpect.Xpect -->
    <extension
            id="xpect.check.fast"
            name="Xpect Problem"
            point="org.eclipse.core.resources.markers">
        <super type="org.eclipse.xtext.ui.check.fast"/>
        <persistent value="true"/>
    </extension>
    <extension
            id="xpect.check.normal"
            name="Xpect Problem"
            point="org.eclipse.core.resources.markers">
        <super type="org.eclipse.xtext.ui.check.normal"/>
        <persistent value="true"/>
    </extension>
    <extension
            id="xpect.check.expensive"
            name="Xpect Problem"
            point="org.eclipse.core.resources.markers">
        <super type="org.eclipse.xtext.ui.check.expensive"/>
        <persistent value="true"/>
    </extension>

	<!-- Quick Outline -->
	<extension
		point="org.eclipse.ui.handlers">
		<handler 
			class="org.eclipse.xpect.ui.XpectExecutableExtensionFactory:org.eclipse.xtext.ui.editor.outline.quickoutline.ShowQuickOutlineActionHandler"
			commandId="org.eclipse.xtext.ui.editor.outline.QuickOutline">
			<activeWhen>
				<reference
					definitionId="org.eclipse.xpect.Xpect.Editor.opened">
				</reference>
			</activeWhen>
		</handler>
	</extension>
	<extension
		point="org.eclipse.ui.commands">
		<command
			description="Open the quick outline."
			id="org.eclipse.xtext.ui.editor.outline.QuickOutline"
			name="Quick Outline">
		</command>
	</extension>
	<extension point="org.eclipse.ui.menus">
		<menuContribution
			locationURI="popup:#TextEditorContext?after=group.open">
			<command commandId="org.eclipse.xtext.ui.editor.outline.QuickOutline"
				style="push"
				tooltip="Open Quick Outline">
				<visibleWhen checkEnabled="false">
					<reference definitionId="org.eclipse.xpect.Xpect.Editor.opened"/>
				</visibleWhen>
			</command>
		</menuContribution>
	</extension>
    <!-- quickfix marker resolution generator for org.eclipse.xpect.Xpect -->
    <extension
            point="org.eclipse.ui.ide.markerResolution">
        <markerResolutionGenerator
            class="org.eclipse.xpect.ui.XpectExecutableExtensionFactory:org.eclipse.xtext.ui.editor.quickfix.MarkerResolutionGenerator"
            markerType="org.eclipse.xpect.ui.xpect.check.fast">
            <attribute
                name="FIXABLE_KEY"
                value="true">
            </attribute>
        </markerResolutionGenerator>
        <markerResolutionGenerator
            class="org.eclipse.xpect.ui.XpectExecutableExtensionFactory:org.eclipse.xtext.ui.editor.quickfix.MarkerResolutionGenerator"
            markerType="org.eclipse.xpect.ui.xpect.check.normal">
            <attribute
                name="FIXABLE_KEY"
                value="true">
            </attribute>
        </markerResolutionGenerator>
        <markerResolutionGenerator
            class="org.eclipse.xpect.ui.XpectExecutableExtensionFactory:org.eclipse.xtext.ui.editor.quickfix.MarkerResolutionGenerator"
            markerType="org.eclipse.xpect.ui.xpect.check.expensive">
            <attribute
                name="FIXABLE_KEY"
                value="true">
            </attribute>
        </markerResolutionGenerator>
    </extension>
   	<!-- Rename Refactoring -->
	<extension point="org.eclipse.ui.handlers">
		<handler 
			class="org.eclipse.xpect.ui.XpectExecutableExtensionFactory:org.eclipse.xtext.ui.refactoring.ui.DefaultRenameElementHandler"
			commandId="org.eclipse.xtext.ui.refactoring.RenameElement">
			<activeWhen>
				<reference
					definitionId="org.eclipse.xpect.Xpect.Editor.opened">
				</reference>
			</activeWhen>
		</handler>
	</extension>
    <extension point="org.eclipse.ui.menus">
         <menuContribution
            locationURI="popup:#TextEditorContext?after=group.edit">
         <command commandId="org.eclipse.xtext.ui.refactoring.RenameElement"
               style="push">
            <visibleWhen checkEnabled="false">
               <reference
                     definitionId="org.eclipse.xpect.Xpect.Editor.opened">
               </reference>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
   <extension point="org.eclipse.ui.preferencePages">
	    <page
	        category="org.eclipse.xpect.Xpect"
	        class="org.eclipse.xpect.ui.XpectExecutableExtensionFactory:org.eclipse.xtext.ui.refactoring.ui.RefactoringPreferencePage"
	        id="org.eclipse.xpect.Xpect.refactoring"
	        name="Refactoring">
	        <keywordReference id="org.eclipse.xpect.ui.keyword_Xpect"/>
	    </page>
	</extension>

  <extension point="org.eclipse.compare.contentViewers">
    <viewer id="org.eclipse.xpect.Xpect.compare.contentViewers"
            class="org.eclipse.xpect.ui.XpectExecutableExtensionFactory:org.eclipse.xtext.ui.compare.InjectableViewerCreator"
            extensions="xpect">
    </viewer>
  </extension>
  <extension point="org.eclipse.compare.contentMergeViewers">
    <viewer id="org.eclipse.xpect.Xpect.compare.contentMergeViewers"
            class="org.eclipse.xpect.ui.XpectExecutableExtensionFactory:org.eclipse.xtext.ui.compare.InjectableViewerCreator"
            extensions="xpect" label="Xpect Compare">
     </viewer>
  </extension>
  <extension point="org.eclipse.ui.editors.documentProviders">
    <provider id="org.eclipse.xpect.Xpect.editors.documentProviders"
            class="org.eclipse.xpect.ui.XpectExecutableExtensionFactory:org.eclipse.xtext.ui.editor.model.XtextDocumentProvider"
            extensions="xpect">
    </provider>
  </extension>
  <extension point="org.eclipse.team.core.fileTypes">
    <fileTypes
            extension="xpect"
            type="text">
    </fileTypes>
  </extension>
  <extension
        point="org.eclipse.ui.ide.editorAssociationOverride">
     <editorAssociationOverride
           class="org.eclipse.xpect.ui.XpectExecutableExtensionFactory:org.eclipse.xpect.ui.editor.XpectEditorAssociationOverride"
           id="org.eclipse.xpect.ui.editor.XpectEditorAssociationOverrideID">
     </editorAssociationOverride>
  </extension>
	<extension
		point="org.eclipse.emf.ecore.extension_parser">
		<parser
			class="org.eclipse.xpect.ui.services.XtResourceFactory"
			type="xt">
		</parser>
	</extension>
  	<extension point="org.eclipse.xtext.extension_resourceServiceProvider">
        <resourceServiceProvider
            class="org.eclipse.xpect.ui.services.XtResourceUIServiceProviderProvider"
            uriExtension="xt">
        </resourceServiceProvider>
    </extension>
    <extension
            point="org.eclipse.ui.editors">
        <editor
              class="org.eclipse.xpect.ui.editor.XtEditorExecutableExtensionFactory:org.eclipse.xtext.ui.editor.XtextEditor"
              contributorClass="org.eclipse.ui.editors.text.TextEditorActionContributor"
              default="true"
              id="org.eclipse.xpect.Xt"
              name="Xpect+Xtext Editor">
        </editor>
    </extension>
   <extension
         point="org.eclipse.xpect.fileExtensions">
      <fileExtension
            fileExtension="ecore"
            xtextUiModule="org.eclipse.xtext.ui.ecore.EcoreUiModule">
      </fileExtension>
   </extension>
   
   <extension
            id="live_test_execution_success"
            name="Xpect Test Passed Successfully"
            point="org.eclipse.core.resources.markers">
        <persistent value="true"/>
        <super
              type="org.eclipse.xpect.ui.xpect.check.fast">
        </super>
    </extension>
    <extension
            id="live_test_execution_failed"
            name="Xpect Test Failed"
            point="org.eclipse.core.resources.markers">
        <super type="org.eclipse.xpect.ui.xpect.check.fast"/>
        <persistent value="true"/>
    </extension>
    <extension
            id="live_test_execution_error"
            name="Xpect Test Failed"
            point="org.eclipse.core.resources.markers">
        <super type="org.eclipse.xpect.ui.xpect.check.fast"/>
        <persistent value="true"/>
    </extension>
    <extension
            id="live_test_execution_ignored"
            name="Xpect Test Ignored"
            point="org.eclipse.core.resources.markers">
        <super type="org.eclipse.xpect.ui.xpect.check.fast"/>
        <persistent value="true"/>
    </extension>
    <extension
        point="org.eclipse.ui.editors.annotationTypes">
     <type
           markerType="org.eclipse.xpect.ui.live_test_execution_success"
           name="org.eclipse.xpect.ui.live_test_execution_success_annotation"
           super="org.eclipse.ui.workbench.texteditor.info">
     </type>
  </extension>
  <extension
        point="org.eclipse.ui.editors.markerAnnotationSpecification">
     <specification
           annotationImageProvider="org.eclipse.xpect.ui.services.XpectAnnotationImageProvider"
           annotationType="org.eclipse.xpect.ui.live_test_execution_success_annotation"
           includeOnPreferencePage="true"
           symbolicIcon="info">
     </specification>
  </extension>
</plugin>
